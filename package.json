{
  "name": "solid-edge-success-criteria-checklist",
  "version": "1.0.0",
  "description": "Bilingual success criteria checklist with dynamic Excel import and PDF export",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm install && npm run build",
    "start": "node backend/server.js",
    "install-all": "npm install && cd frontend && npm install",
    "postinstall": "cd frontend && npm install",
    "railway-build": "npm run install-all && npm run build"
  },
  "keywords": ["checklist", "excel", "pdf", "bilingual", "neumorphism"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.6.0",
    "sqlite3": "^5.1.6",
    "@supabase/supabase-js": "^2.38.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}